<% include ./partials/header%>
<div class="ui main text container">
    <div class="ui huge header"><%=blogs.title%></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blogs.image%>">
        </div>
        <div class="content">
            <span><%=blogs.created.toDateString();%></span>
        </div>
        <div class="description">
            <p><%-blogs.body%></p>
        </div>
        <a class="ui  teal button" href="/blogs/<%=blogs._id%>/edit">Edit</a>
        <form id="delete" action="/blogs/<%=blogs._id%>?_method=DELETE" method="POST">
            <button class="ui  red button">Delete</button>
        </form>
    </div>
</div>
<a href="/blogs">
    <div class="ui animated button ui secondary button" tabindex="0">
  <div class="visible content">Go Back</div>
  <div class="hidden content">
    <i class="left arrow icon"></i>
  </div>
</div>
</a>

<% include ./partials/footer%>