<% include ./partials/header%>
<div class="ui main text container">
    <div class="ui huge header"><i class="edit icon"></i>Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
           <% blogs.forEach(function(blogs){ %>
<div class="item">
    <div class="image">
        <img src="<%=blogs.image%>">
    </div>
    <div class="content">
        <a class="header" href="/blogs/<%=blogs._id%>"><%=blogs.title%></a>
        <div class="meta">
            <span><%=blogs.created.toDateString()%></span>
        </div>
        <div class="description">
        <p><%- blogs.body.substring(0,100);%>...</p>
        </div>
        <div class="extra">
            <a href="/blogs/<%=blogs._id%>">
        <div class="ui animated fade button ui primary button" tabindex="0">
       <div class="visible content">More Info</div>
      <div class="hidden content">
       <i class="info circle icon"></i>
      </div>
       </div>
    </a>
        </div>
    </div>
    
</div>
<% }); %> 
        </div>
    </div>
</div>
<% include ./partials/footer%>